{
  "name": "kiosk_frontend",
  "private": true,
  "version": "0.3.1",
  "type": "module",
  "main": "electron/main.js",
  "description": "Greenwood Kiosk",
  "author": "Spark Collaborative",
  "scripts": {
    "dev": "vite --port 5173 --host & electron  --trace-warnings .",
    "dev:web": "vite --port 5173 --host",
    "dev:electron": "electron --trace-warnings .",
    "build": "vite build && vite build --config vite.config.js",
    "postbuild": "xcopy dist\\*  dist-electron\\* /E /I /Y",
    "serve": "vite build && vite",
    "preview": "vite preview",
    "start": "electron-forge start",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\""
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-regular-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/vue-fontawesome": "^3.0.8",
    "@openhistoricalmap/maplibre-gl-dates": "^1.3.0",
    "electron-squirrel-startup": "^1.0.1",
    "map-promisified": "^0.4.0",
    "mapbox-gl": "^3.11.1",
    "maplibre-gl": "^5.5.0",
    "object-hash": "3.0.0",
    "vue": "^3.5.13",
    "vue-html-dialog": "^2.1.2",
    "vue-mapbox3": "^0.8.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "electron": "^36.3.1",
    "terser": "^5.40.0",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vue-devtools": "^7.7.6"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "public/gcc"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "greenwood_kiosk",
            "setupIcon": "public/gcc.ico",
            "setupExe": "GreenwoodKioskSetup.exe",
            "noMsi": false,
            "setupArgs": {
              "name": "Greenwood Kiosk",
              "description": "Greenwood Kiosk",
              "version": "0.3.1",
              "title": "Greenwood Kiosk",
              "exe": "GreenwoodKiosk.exe",
              "appId": "com.greenwoodculturalcenter.greenwoodkiosk"
            }
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
